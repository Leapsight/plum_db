[
    {plum_db, [
        {aae_enabled, true},
        %% 1 week
        {aae_hashtree_ttl, 604800},
        %% {wait_for_hashtrees, true},
        %% {wait_for_partitions, true},
        % {wait_for_aae_exchange, false},
        {store_open_retries_delay, 2000},
        {store_open_retry_Limit, 30},
        {data_exchange_timeout, 60000},
        {hashtree_timer, 10000},
        {data_dir, "/tmp/plum_db/ct"},
        {data_channel, pdb_data},
        {partitions, 16},
        {prefixes, [
            {ram, ram},
            {ram_disk, ram_disk},
            {disk, disk}
        ]}
    ]},
    {rocksdb, [
        {open , [
            {compression, lz4},
            {total_threads, 3},
            {block_based_table_options, [
                {bloom_filter_policy, 10}
            ]},
            {prefix_extractor, {capped_prefix_extractor, 12}}
        ]}
    ]},
    {partisan, [
        {broadcast_mods, [plum_db]},
        {connect_disterl, false},
        {channels, []},
        {peer_ip, {127,0,0,1}},
        {peer_port, 18086},
        {parallelism, 1},
        {pid_encoding, false},
        {ref_encoding, false},
        {remote_ref_as_uri, true},
        {exchange_tick_period, 60000},
        {lazy_tick_period, 1000},
        {partisan_peer_service_manager,
          partisan_pluggable_peer_service_manager}
    ]},
    {kernel, [
        {logger_level, info},
        {logger, [
            % {handler, default, undefined},
            {handler, default, logger_std_h, #{
                formatter => {
                    logger_formatter, #{
                        legacy_header => false,
                        single_line => false
                    }
                }
            }}
        ]}
    ]}
].