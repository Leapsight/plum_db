{plugins, [rebar3_hex, pc]}.
{minimum_otp_vsn, "R23"}.
{cover_enabled, true}.

{eunit_opts, [verbose, {report,{eunit_surefire,[{dir,"."}]}}]}.
{edoc_opts, [{preprocess, true}]}.
{xref_checks, [undefined_function_calls]}.

{erl_opts, [
    debug_info,
    warnings_as_errors,
    nowarn_deprecated_function,
    {platform_define, "^[0-9]+", namespaced_types},
    {parse_transform, lager_transform}
]}.

{deps, [
    lager,
    {sext, "~>1.5.0"},
    {gproc,
        {git, "https://github.com/Leapsight/gproc.git", {branch, "master"}}
    },
    {partisan,
        {git, "https://github.com/Leapsight/partisan.git", {tag, "3.1.0-bondy"}}
    },
    {plumtree,
        {git, "https://github.com/aramallo/plumtree.git", {branch, "master"}}
    },
    {eleveldb,
        {git, "https://github.com/Leapsight/eleveldb.git", {branch, "develop"}}
    },
    %% Leapsight utility library
    {utils,
        {git, "https://gitlab.com/leapsight/utils.git", {branch, "master"}}
    }
]}.

%% Releases for development and testing.
%% You would normally embed plum_db within your app

{relx, [
    {release, {plum_db, "0.3.5"}, [
        %% Erlang
        sasl,
        crypto,
        inets,
        tools,
        runtime_tools,
        os_mon,
        %%
        partisan,
        plumtree,
        eleveldb,
        sext,
        gproc,
        %%
        plum_db
    ]},
    {dev_mode, true},
    {include_erts, false},
    {extended_start_script, true},

    {overlay, [
        {mkdir, "log/sasl"},
        {mkdir, "{{output_dir}}/data"}
    ]}

]}.


{profiles, [
